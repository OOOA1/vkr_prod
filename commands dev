uvicorn server:app --host 0.0.0.0 --port 8000 --reload -- старт сервера
http://localhost:8000/ -- локальная ссылка для разработки
.\venv\Scripts\python.exe -m pip install -r requirements.txt
.\venv\Scripts\python.exe -m uvicorn server:app --host 0.0.0.0 --port 8000 --reload

/////////Работа с ВДС//////////////

sudo -u app -H bash -lc '
cd /opt/vkr_prod
git fetch origin
git reset --hard origin/main      # если у тебя ветка master — замени main на master
source venv/bin/activate
pip install -r requirements.txt
'

systemctl restart vkr_prod
systemctl status vkr_prod --no-pager